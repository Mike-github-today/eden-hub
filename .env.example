# Eden Hub Portal - Environment Variables
# Copy this file to .env and fill in your values

# Airtable
AIRTABLE_API_KEY=your_api_key_here
AIRTABLE_BASE_ID=your_base_id_here

# Make.com Webhooks
MAKE_GENERATE_TOKEN_URL=https://hook.eu1.make.com/your_token_scenario
MAKE_VERIFY_ACCESS_URL=https://hook.eu1.make.com/your_verify_scenario

# Squarespace (for reference, not used in code)
SQUARESPACE_PORTAL_URL=https://eden-relationships.co.uk/portal

# Portal
VITE_PORTAL_URL=https://portal.eden-relationships.co.uk
VITE_SESSION_DURATION=86400000  # 24 hours in milliseconds
VITE_TOKEN_LIFETIME_DAYS=90

# Development
VITE_DEBUG_MODE=false
